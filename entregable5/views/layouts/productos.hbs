<style>
	.demo {
		border:1px solid #C0C0C0;
		border-collapse:collapse;
		padding:5px;
	}
	.demo th {
		border:1px solid #C0C0C0;
		padding:5px;
		background:#F0F0F0;
	}
	.demo td {
		border:1px solid #C0C0C0;
		padding:5px;
	}
</style>
<br>
{{#if listExists}}
<table class="demo">
	<caption>List de Productos</caption>
	{{#if productos}}
	<thead>
	<tr>
		<th>Id</th>
		<th>Nombre</th>
		<th>Precio</th>
		<th>Imagen URL</th>
	</tr>
	</thead>
	<tbody>
		
        {{#each productos}}
	<tr>
		<td>{{this.id}}</td>
		<td>{{this.title}}</td>
		<td>{{this.price}}</td>
		<td><img src={{this.thumbnail}} alt="alternatetext"></td>
	</tr>
        {{/each}}
		{{else}}
		<br> hay producto para mostrar
		{{/if}}
	</tbody>
</table>

            
        
{{/if}}
     <button id="myButton">Regresar a Crear Producto</button>

      <script type="text/javascript">
          document.getElementById("myButton").onclick = function () {
              location.href = "/";
          };
      </script>